<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sk.stuba.fiit.vnos.nfcpass.HomeActivity"
    tools:showIn="@layout/app_bar_home"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Logged User:"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView5"
                android:textAlignment="textEnd"
                android:gravity="center|end"
                android:paddingRight="10dp" />

            <TextView
                android:text="NFC ID:"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView3"
                android:textAlignment="textEnd"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="PIN Number:"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView4"
                android:textAlignment="textEnd"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Firebase UID: "
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView2"
                android:textAlignment="textEnd"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView_username"
                android:textAlignment="textStart"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView_firebaseId"
                android:textAlignment="textStart"
                android:gravity="center"
                android:layout_below="@+id/textView_username"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView_pin"
                android:textAlignment="textStart"
                android:gravity="center"
                android:layout_below="@+id/textView_nfcId"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView_nfcId"
                android:textAlignment="textStart"
                android:gravity="center"
                android:layout_below="@+id/textView_firebaseId"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
